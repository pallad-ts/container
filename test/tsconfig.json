{
  "extends": "@pallad/scripts/dist/tsconfig-node.json",
  "compilerOptions": {
    "target": "ES2022",
    "noEmit": true,
    "baseUrl": "../src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "../src/@types",
      "../node_modules/@types"
    ],
    "paths": {
      "@src/*": [
        "*"
      ]
    }
  },
  "references": [
    {
      "path": "@src"
    }
  ]
}
